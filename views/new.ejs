<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <title>Hello, world!</title>
  </head>
  <body>
      <div class="col-md-12 mx-auto">
        <div id="alert">
        </div>
<!-- Default form register -->
<form id="target">
        <!-- <div class="form-group">
          <label for="exampleInputEmail1">Endpoint</label>
          <input type="text" class="form-control" id="endpoint" aria-describedby="emailHelp">
          <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div> -->
        <label for="basic-url">Your vanity URL</label>
<div class="input-group mb-3">
  <div class="input-group-prepend">
    <span class="input-group-text" id="basic-url"></span>
  </div>
  <input type="text" class="form-control" id="endpoint" aria-describedby="basic-addon3">
</div>
        <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <label class="input-group-text" for="inputGroupSelect01">Method</label>
                </div>
                <select class="custom-select" id="method">
                  <option selected>Choose...</option>
                  <option value="GET">GET</option>
                  <option value="POST">POST</option>
                  <option value="DELETE">DELETE</option>
                  <option value="PUT">PUT</option>
                </select>
              </div>
        <div class="form-group">
                <label for="exampleFormControlTextarea1">Request Json</label>
                <textarea class="form-control" id="request" rows="3"></textarea>
        </div>
        <div class="form-group">
                <label for="formGroupExampleInput">Status Code</label>
                <input type="text" class="form-control" id="status" placeholder="Example input">
              </div>
        <div class="form-group">
                <label for="exampleFormControlTextarea1">Response Json</label>
                <textarea class="form-control" id="response" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
</div>
<!-- Default form register -->
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.min.js"></script>
    <script type="text/javascript" src= "https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"> </script> 
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.min.js"></script>
    <script>
      $( document ).ready(function() {
        $("#basic-url").text('http://127.0.0.1/' + $.cookie("prefix"))
        });
        $( "#target" ).submit(function( event ) {
            if($.cookie("access_token")){
                event.preventDefault();
                var endpoint = $("#endpoint").val();
                var method = $("#method").val();
                var request = $("#request").val();
                var status = $("#status").val();
                var response = $("#response").val();
                try{
                  request = JSON.parse(request)
                  response = JSON.parse(response)
                }catch(err){

                }

                    $.ajax({
                        url : 'http://127.0.0.1:3000/stubs',
                        type : 'POST',
                        data: JSON.stringify({
                                    "endpoint" : endpoint,
                                    "method": method,
                                    "status" : status,
                                    "request": request,
                                    "response" : response
                        }),
	                      dataType: "json",
	                      contentType: "application/json",
                        headers: {
                            "access_token" : $.cookie("access_token")
                        }
                        }).done(function(data) {
                          console.log(data)
                          $('#target').trigger("reset");
                      }).fail(function(data) {
                        htmlDiv = ''
                        $.each(data.responseJSON.errors, function( index, value ) {
                          htmlDiv += '<div class="alert alert-primary" role="alert">'
                          htmlDiv +=  value
                          htmlDiv += '</div>'
                         })
                         $(htmlDiv).appendTo( "#alert" )
                        });
                    }else{
                        window.location.href = '/'
                    }
                    });
        </script>
        
  </body>
</html>